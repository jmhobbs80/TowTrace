{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": false, /* Changed to false to prevent unused variable errors */
    "noUnusedParameters": false, /* Changed to false to prevent unused parameter errors */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["DOM", "ESNext"], /* Added DOM lib for atob function */
    "skipLibCheck": true
  }
}