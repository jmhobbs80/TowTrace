{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "Node16",  // Match moduleResolution with Node16
	  "moduleResolution": "Node16",  // Keep this as Node16 for modern Node.js
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "types": ["@cloudflare/workers-types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
  }